<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <h2>Page Order</h2>
        <!-- <a href="/create-produk" class="btn btn-success">Tambah Produk</a> -->
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Barang</th>
                <th scope="col">Harga</th>
                <th scope="col">Bukti TF</th>
                <th scope="col">tanggal</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
                <% Order.forEach(e => { %>
                    <tr>
                        <td><%= e.id_order %> </td>
                        <th><%= e.nama_barang %> </th>
                        <td><%= e.harga %> </td>
                        <td><img src="img/<%= e.info %>" width="60px" height="60px"></td>
                        <td><%= e.updatedAt %> </td>
                        <td>
                            <button onclick= <%= "del("+e.id_order+")" %>  type="button" class="btn btn-danger" >Tolak</button>
                            <a href="/edit/<%= e.id_order %> " class="btn btn-success">Terima</a>                            
                        </td>
                    </tr>
                <% }) %>
            </tbody>
          </table>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="js/coba.js"></script>
    
</body>
</html>